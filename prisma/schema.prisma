datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/TestDB_RADO"
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

model Customer {
  id      Int       @id @default(autoincrement())
  name    String
  email   String
  phone   String
  Address Address[]
}

model Address {
  id         Int       @id @default(autoincrement())
  city       String
  province   String
  zip        Int
  house      String
  customer   Customer? @relation(fields: [customerId], references: [id])
  customerId Int?
}
